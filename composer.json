{
    "name": "harmonyio/phpunit-extension",
    "description": "Asynchronous helpers for PHPUnit",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pieter Hordijk",
            "email": "info@pieterhordijk.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "amphp/amp": "^2.1.1",
        "phpunit/phpunit": "^8.1.3 || ^9.0.0"
    },
    "require-dev": {
        "harmonyio/php-codesniffer-ruleset": "dev-master",
        "maglnet/composer-require-checker": "^2.0.0",
        "slevomat/coding-standard": "^5.0.4",
        "squizlabs/php_codesniffer": "^3.4.2"
    },
    "autoload": {
        "psr-4": {
            "HarmonyIO\\PHPUnitExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HarmonyIO\\PHPUnitExtensionTest\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
